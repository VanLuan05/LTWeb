@model List<QL_BanHoa.LienHe>
@{
    ViewBag.Title = "Quản Lý Liên Hệ";
    ViewBag.PageTitle = "Quản Lý Liên Hệ";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid">

   

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Danh sách tin nhắn liên hệ</h6>
        </div>
        <div class="card-body">
           <div class="table-responsive">
    <table class="table table-bordered table-hover align-middle" id="dataTable" width="100%" cellspacing="0">
        <thead class="bg-light text-dark text-center align-middle">
            <tr>
                <th width="12%">Ngày gửi</th>
                <th width="15%">Người gửi</th>
                <th width="20%">Thông tin liên hệ</th>
                <th width="30%">Nội dung</th>
                <th width="10%">Trạng thái</th>
                <th width="8%">Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Count > 0)
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td class="text-center small">@string.Format("{0:dd/MM/yyyy HH:mm}", item.NGAYGUI)</td>
                        <td class="fw-bold text-primary">@item.HOTEN</td>
                        <td class="small">
                            <div><i class="fa fa-envelope text-secondary me-1"></i> @item.EMAIL</div>
                            @if (!string.IsNullOrEmpty(item.SDT))
                            {
                                <div><i class="fa fa-phone text-secondary me-1"></i> @item.SDT</div>
                            }
                        </td>
                        <td style="max-width: 300px; word-wrap: break-word;" class="small">@item.NOIDUNG</td>
                        <td class="text-center">
                            @if (item.TRANGTHAI == "Chưa xem")
                            {
                                <span class="badge bg-danger p-2">Mới</span>
                            }
                            else
                            {
                                <span class="badge bg-success p-2">Đã xem</span>
                            }
                        </td>
                        <td class="text-center">
                            <a href="@Url.Action("XoaLienHe", "Admin", new { id = item.MALH })" 
                               class="btn btn-danger btn-sm btn-circle" 
                               onclick="return confirm('Bạn có chắc muốn xóa tin nhắn này?');" 
                               title="Xóa">
                                <i class="fa fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="6" class="text-center text-muted py-4">Chưa có tin nhắn liên hệ nào.</td>
                </tr>
            }
        </tbody>
    </table>
</div>
        </div>
    </div>

</div>