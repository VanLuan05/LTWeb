@model IEnumerable<QL_BanHoa.LienHe>

@{
    ViewBag.Title = "Quản lý hộp thư liên hệ";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    .card-mailbox {
        border: none;
        border-radius: 10px;
        box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.15);
    }

    .card-header-mailbox {
        background-color: #f8f9fc;
        border-bottom: 1px solid #e3e6f0;
        padding: 15px 20px;
        color: #1cc88a; /* Màu xanh lá chủ đạo */
        font-weight: bold;
        font-size: 1.1rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .table-mailbox thead th {
        background-color: #eaecf4;
        color: #4e73df;
        border-bottom: 2px solid #e3e6f0;
        text-align: center;
        vertical-align: middle;
        font-weight: 700;
    }

    .table-mailbox tbody td {
        vertical-align: middle;
        color: #5a5c69;
    }

    .sender-avatar {
        width: 40px;
        height: 40px;
        background-color: #e2e6ea;
        color: #1cc88a;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
        margin-right: 15px;
        font-size: 1.2rem;
    }

    .sender-info-container {
        display: flex;
        align-items: center;
    }

    .sender-name {
        font-weight: bold;
        color: #333;
        display: block;
    }

    .sender-meta {
        font-size: 0.85rem;
        color: #858796;
    }

    /* CSS cho phần nội dung tin nhắn */
    .message-content {
        max-width: 350px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        display: inline-block;
        cursor: pointer; /* Biến con trỏ thành bàn tay */
        color: #4e73df; /* Màu xanh để gợi ý có thể click */
        transition: 0.2s;
    }

        .message-content:hover {
            color: #2e59d9;
            text-decoration: underline;
        }

    .btn-action-delete {
        color: #e74a3b;
        background: #fff;
        border: 1px solid #e74a3b;
        transition: 0.3s;
    }

        .btn-action-delete:hover {
            background: #e74a3b;
            color: #fff;
        }
</style>

<div class="container-fluid">

    <h1 class="h3 mb-4 text-gray-800">Quản lý phản hồi & Liên hệ</h1>

    <div class="card card-mailbox mb-4">
        <div class="card-header card-header-mailbox">
            <span>
                <i class="fas fa-envelope-open-text mr-2"></i> Danh sách tin nhắn từ khách hàng
            </span>
            <span class="badge badge-success badge-counter">
                Tổng: @Model.Count() tin
            </span>
        </div>

        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-mailbox table-hover mb-0" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th style="width: 5%;">#</th>
                            <th style="width: 30%;">Người gửi</th>
                            <th style="width: 40%;">Nội dung tin nhắn</th>
                            <th style="width: 15%;">Ngày gửi</th>
                            <th style="width: 10%;">Tác vụ</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            int i = 1;
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td class="text-center font-weight-bold">@i</td>

                                    <td>
                                        <div class="sender-info-container">
                                            <div class="sender-avatar">
                                                @(item.HOTEN.Length > 0 ? item.HOTEN.Substring(0, 1).ToUpper() : "?")
                                            </div>
                                            <div>
                                                <span class="sender-name">@item.HOTEN</span>
                                                <div class="sender-meta">
                                                    <i class="fas fa-envelope fa-xs mr-1"></i> @item.EMAIL <br />
                                                    <i class="fas fa-phone fa-xs mr-1"></i> @(string.IsNullOrEmpty(item.SDT) ? "Chưa có SĐT" : item.SDT)
                                                </div>
                                            </div>
                                        </div>
                                    </td>

                                    <td>
                                        <div class="message-content view-details"
                                             data-name="@item.HOTEN"
                                             data-email="@item.EMAIL"
                                             data-content="@item.NOIDUNG"
                                             data-time="@string.Format("{0:dd/MM/yyyy HH:mm}", item.NGAYGUI)"
                                             title="Nhấn để xem chi tiết">

                                            <i class="fas fa-comment-alt mr-1 text-gray-400"></i>
                                            @if (item.NOIDUNG.Length > 60)
                                            {
                                                @item.NOIDUNG.Substring(0, 60) <span>...</span>
                                            }
                                            else
                                            {
                                                @item.NOIDUNG
                                            }
                                        </div>
                                    </td>

                                    <td class="text-center">
                                        <span class="badge badge-light border text-secondary px-2 py-1">
                                            <i class="far fa-clock mr-1"></i>
                                            @string.Format("{0:dd/MM/yyyy HH:mm}", item.NGAYGUI)
                                        </span>
                                    </td>

                                    <td class="text-center">
                                        <a href="@Url.Action("XoaLienHe", "Admin", new { id = item.MALH })"
                                           class="btn btn-action-delete btn-sm btn-circle"
                                           title="Xóa tin nhắn này"
                                           onclick="return confirm('Bạn có chắc chắn muốn xóa tin nhắn của @item.HOTEN không?');">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                                i++;
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center py-5 text-muted">
                                    <img src="https://cdn-icons-png.flaticon.com/512/4076/4076432.png" width="80" class="mb-3 opacity-50" alt="Empty" />
                                    <p>Hộp thư đang trống. Chưa có liên hệ nào!</p>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="messageModal" tabindex="-1" role="dialog" aria-labelledby="messageModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header bg-success text-bg-dark">
                <h5 class="modal-title font-b-bold" id="messageModalLabel">
                    <i class="fas fa-envelope-open mr-2"></i> Chi tiết tin nhắn
                </h5>
                
            <div class="modal-body">
                <div class="mb-3 pb-3 border-bottom">
                    <h5 class="font-weight-bold text-dark mb-1" id="modalName"></h5>
                  
                    <p class="text-muted mb-0"><small><i class="far fa-clock mr-1"></i> <span id="modalTime"></span></small></p>
                </div>
                <div class="p-3 bg-light rounded text-dark" style="font-size: 1.1rem; line-height: 1.6;">
                    <i class="fas fa-quote-left text-success mr-2 opacity-50"></i>
                    <span id="modalContent"></span>
                </div>
            </div>
            
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Khi nhấn vào class .view-details
            $('.view-details').click(function () {
            
                var content = $(this).data('content');
                var time = $(this).data('time');

               
                $('#modalContent').text(content);
                $('#modalTime').text(time);

                // Hiển thị Modal
                $('#messageModal').modal('show');
            });
        });
    </script>
}