﻿@{
    ViewBag.Title = "Thêm Danh Mục Mới";
    ViewBag.PageTitle = "Thêm Danh Mục Mới";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="max-w-2xl mx-auto bg-white p-8 rounded-xl shadow-md">
    <div class="flex justify-between items-center mb-6">
        <h3 class="text-xl font-semibold text-gray-800">Thông Tin Danh Mục Mới</h3>
        <a href="@Url.Action("CategoryManager", "Admin")" class="text-gray-500 hover:text-gray-700">
            <i class="fas fa-arrow-left"></i> Quay lại
        </a>
    </div>

    @* Form nhập liệu, dùng ID để JS xử lý *@
    <form id="formThemDanhMuc">
        <div class="space-y-6">

            @* Khu vực hiển thị thông báo lỗi/thành công *@
            <div id="alertMessage" class="hidden p-4 rounded-md mb-4 text-sm font-bold"></div>

            @* Tên danh mục *@
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Tên Danh Mục <span class="text-red-500">*</span></label>
                <input type="text" id="TENDM" required class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-indigo-500 focus:border-indigo-500" placeholder="Ví dụ: Hoa Lan, Hoa Cưới...">
            </div>

            @* Danh mục cha *@
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Danh Mục Cha (Nếu có)</label>
                <select id="MADM_CHA" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-indigo-500 focus:border-indigo-500">
                    <option value="">-- Đang tải dữ liệu... --</option>
                </select>
                <p class="mt-1 text-xs text-gray-500">Chọn danh mục cha nếu đây là danh mục con (VD: Chọn 'Hoa Hồng' nếu đang tạo 'Hoa Hồng Đỏ').</p>
            </div>

            @* Trạng thái *@
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Trạng Thái</label>
                <select id="TRANGTHAI" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-indigo-500 focus:border-indigo-500">
                    <option value="Hiển thị">Hiển thị</option>
                    <option value="Tạm ẩn">Tạm ẩn</option>
                </select>
            </div>

            @* Nút Submit *@
            <div class="flex justify-end pt-4 border-t border-gray-200">
                <button type="submit" id="btnSubmit" class="px-6 py-2 bg-indigo-600 text-white font-medium rounded-lg shadow-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 transition-all">
                    <i class="fas fa-plus mr-2"></i> Thêm Danh Mục
                </button>
            </div>
        </div>
    </form>
</div>

@* --- SCRIPT XỬ LÝ API --- *@
<script>
    // Định nghĩa URL API
    const API_URL_GET_ALL = '/api/DanhMucAPI/GetAllDanhMucs';
    const API_URL_ADD = '/api/DanhMucAPI/ThemDanhMuc';

    // 1. Chạy ngay khi trang web tải xong
    document.addEventListener("DOMContentLoaded", function () {
        loadDanhSachCha();

        // Gắn sự kiện submit cho form
        document.getElementById("formThemDanhMuc").addEventListener("submit", xuLyThemMoi);
    });

    // Hàm lấy danh sách danh mục cha
    async function loadDanhSachCha() {
        const selectCha = document.getElementById('MADM_CHA');

        try {
            const res = await fetch(API_URL_GET_ALL);
            if (!res.ok) throw new Error("Lỗi kết nối API");

            const data = await res.json();

            // Xóa options cũ và thêm option mặc định
            selectCha.innerHTML = '<option value="">-- Danh mục gốc --</option>';

            // Duyệt qua danh sách và thêm vào dropdown
            data.forEach(item => {
                const option = document.createElement("option");
                option.value = item.MADM;
                option.text = item.TENDM;
                selectCha.appendChild(option);
            });

        } catch (err) {
            console.error(err);
            selectCha.innerHTML = '<option value="">Lỗi tải dữ liệu!</option>';
        }
    }

    // Hàm xử lý khi nhấn nút thêm
    async function xuLyThemMoi(e) {
        e.preventDefault();
        const btnSubmit = document.getElementById("btnSubmit");
        const alertBox = document.getElementById("alertMessage");

        // Lấy dữ liệu từ form
        const tenDM = document.getElementById("TENDM").value;
        const maCha = document.getElementById("MADM_CHA").value;
        const trangThai = document.getElementById("TRANGTHAI").value;

        // Tạo object dữ liệu gửi đi
        const payload = {
            TENDM: tenDM,
            MADM_CHA: maCha ? parseInt(maCha) : null,
            TRANGTHAI: trangThai
        };

        // Hiển thị trạng thái đang xử lý
        btnSubmit.disabled = true;
        btnSubmit.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Đang xử lý...';

        try {
            const res = await fetch(API_URL_ADD, {
                method: "POST",
                headers: {
                    "Content-Type": "application/json"
                },
                body: JSON.stringify(payload)
            });

            if (res.ok) {
                // Thành công thì hiện thông báo xanh và chuyển trang
                hienThongBao("Thêm danh mục thành công! Đang chuyển hướng...", "success");

                setTimeout(() => {
                    window.location.href = "/Admin/CategoryManager";
                }, 1500);
            } else {
                // Thất bại thì hiện thông báo lỗi từ server
                const errData = await res.json();
                hienThongBao("Lỗi: " + (errData.Message || "Không thể thêm danh mục"), "error");
                btnSubmit.disabled = false;
                btnSubmit.innerHTML = '<i class="fas fa-plus mr-2"></i> Thêm Danh Mục';
            }

        } catch (err) {
            console.error(err);
            hienThongBao("Lỗi kết nối đến Server!", "error");
            btnSubmit.disabled = false;
            btnSubmit.innerHTML = '<i class="fas fa-plus mr-2"></i> Thêm Danh Mục';
        }
    }

    // Hàm hiển thị thông báo đẹp
    function hienThongBao(msg, type) {
        const box = document.getElementById("alertMessage");
        box.classList.remove("hidden", "bg-green-100", "text-green-700", "bg-red-100", "text-red-700");

        if (type === "success") {
            box.classList.add("bg-green-100", "text-green-700");
            box.innerHTML = `<i class="fas fa-check-circle mr-2"></i> ${msg}`;
        } else {
            box.classList.add("bg-red-100", "text-red-700");
            box.innerHTML = `<i class="fas fa-exclamation-triangle mr-2"></i> ${msg}`;
        }

        box.classList.remove("hidden");
    }
</script>