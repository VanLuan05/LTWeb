@model QL_BanHoa.DonHang

@{
    ViewBag.Title = "Quản lý đơn hàng #" + Model.MADH;
    ViewBag.PageTitle = "Chi tiết đơn hàng #" + Model.MADH;
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    .card-dashboard {
        border: none;
        border-radius: 10px;
        box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.15);
        margin-bottom: 30px;
    }

    .card-header-custom {
        background-color: #f8f9fc;
        border-bottom: 1px solid #e3e6f0;
        padding: 15px 20px;
        font-weight: bold;
        color: #1cc88a; /* Màu xanh của shop hoa */
    }

    .status-select {
        border-radius: 20px;
        font-weight: bold;
        padding: 5px 15px;
    }

    /* --- CSS FIX LỖI LỆCH --- */
    .img-product-admin {
        width: 70px;
        height: 70px;
        object-fit: cover;
        border-radius: 8px;
        border: 1px solid #ddd;
        display: inline-block !important; /* Giúp ảnh căn giữa khi cha có text-center */
    }

    /* Class ép buộc căn giữa cả dọc và ngang */
    .cell-center {
        vertical-align: middle !important;
        text-align: center !important;
    }

    /* Class căn giữa dọc nhưng căn phải ngang (cho tiền) */
    .cell-right-middle {
        vertical-align: middle !important;
        text-align: right !important;
    }

    .total-price {
        font-size: 1.5rem;
        color: #e74a3b;
        font-weight: bold;
    }

    .info-label {
        font-weight: 600;
        color: #5a5c69;
    }
</style>

<div class="container-fluid">


    <div class="row">

        <div class="col-lg-8">
            <div class="card card-dashboard">
                <div class="card-header card-header-custom">
                    <i class="fas fa-box-open mr-2"></i> Danh sách sản phẩm
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover" width="100%" cellspacing="0">
                            <thead class="thead-light">
                                <tr>
                                    <th class="cell-center" style="width: 100px;">Hình ảnh</th>
                                    <th class="cell-center">Tên hoa</th>
                                    <th class="cell-center" style="width: 100px;">Số lượng</th>
                                    <th class="text-right">Đơn giá</th>
                                    <th class="text-right">Thành tiền</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.ChiTietDonHangs)
                                {
                                    <tr>
                                        <td class="cell-center">
                                            <img src="~/Content/hinhanh/@item.SanPham.URL_ANH" class="img-product-admin shadow-sm" alt="Hoa" />
                                        </td>

                                        <td class="cell-center">
                                            <span class="font-weight-bold text-dark" style="font-size: 1.1rem;">
                                                @item.SanPham.TENSP
                                            </span>
                                        </td>

                                        <td class="cell-center">
                                            <span class="badge badge-light border px-3 py-2" style="font-size: 0.9rem;">
                                                x @item.SOLUONG
                                            </span>
                                        </td>

                                        <td class="cell-right-middle">@string.Format("{0:N0}", item.SanPham.GIA) đ</td>
                                        <td class="cell-right-middle font-weight-bold text-success">
                                            @string.Format("{0:N0}", item.THANHTIEN) đ
                                        </td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <td colspan="4" class="text-right font-weight-bold" style="vertical-align: middle;">Tổng tiền thanh toán:</td>
                                    <td class="text-right total-price">@string.Format("{0:N0}", Model.TONGTIEN) đ</td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="card card-dashboard h-100">
                        <div class="card-header card-header-custom">
                            <i class="fas fa-credit-card mr-2"></i> Thanh toán
                        </div>
                        <div class="card-body">
                            <p><span class="info-label">Phương thức:</span> <br /> @Model.PHUONGTHUCTHANHTOAN</p>
                            <p><span class="info-label">Ngày đặt:</span> <br /> @string.Format("{0:dd/MM/yyyy HH:mm}", Model.NGAYDAT)</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card card-dashboard h-100">
                        <div class="card-header card-header-custom text-warning">
                            <i class="fas fa-sticky-note mr-2"></i> Ghi chú của khách
                        </div>
                        <div class="card-body">
                            <p class="font-italic text-gray-600">
                                "@(string.IsNullOrEmpty(Model.GHI_CHU) ? "Không có ghi chú" : Model.GHI_CHU)"
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">

            <div class="card card-dashboard border-left-primary">
                <div class="card-header card-header-custom">
                    <i class="fas fa-tasks mr-2"></i> Trạng thái đơn hàng
                </div>
                <div class="card-body">
                    @using (Html.BeginForm("CapNhatTrangThai", "Admin", FormMethod.Post))
                    {
                        @Html.Hidden("id", Model.MADH)
                        <div class="form-group">
                            <label class="info-label">Trạng thái hiện tại:</label>

                            @{
                                var listTrangThai = new List<string> { "Đang xử lý", "Đang vận chuyển", "Đã giao", "Đã hủy" };
                            }

                            <select name="trangThai" class="form-control status-select mb-3"
                                    style="border: 2px solid #4e73df; color: #4e73df;">
                                @foreach (var tt in listTrangThai)
                                {
                                    <option value="@tt" @(Model.TRANG_THAI == tt ? "selected" : "")>@tt</option>
                                }
                            </select>
                        </div>
                        <button type="submit" class="btn btn-success btn-block font-weight-bold py-2">
                            <i class="fas fa-check mr-2"></i> Cập nhật ngay
                        </button>
                    }
                </div>
            </div>

            <div class="card card-dashboard">
                <div class="card-header card-header-custom">
                    <i class="fas fa-user mr-2"></i> Người nhận hàng
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <span class="info-label">Họ tên:</span>
                        <div class="text-dark font-weight-bold" style="font-size: 1.1rem;">@Model.TENNGUOINHAN</div>
                    </div>
                    <div class="mb-3">
                        <span class="info-label">Số điện thoại:</span>
                        <div class="text-primary font-weight-bold">@Model.SDTNGUOINHAN</div>
                    </div>
                    <div class="mb-3">
                        <span class="info-label">Địa chỉ giao:</span>
                        <div class="text-dark">@Model.DIACHIGIAOHANG</div>
                    </div>
                </div>
            </div>

            <div class="card card-dashboard">
                <div class="card-header card-header-custom bg-gray-200 text-dark">
                    <i class="fas fa-user-circle mr-2"></i> Tài khoản đặt hàng
                </div>
                <div class="card-body">
                    @if (Model.NguoiDung != null)
                    {
                        <p class="mb-1"><i class="fas fa-user text-gray-500 mr-2"></i> @Model.NguoiDung.HOTEN</p>
                        <p class="mb-0"><i class="fas fa-envelope text-gray-500 mr-2"></i> @Model.NguoiDung.EMAIL</p>
                    }
                    else
                    {
                        <span class="text-muted">Khách vãng lai</span>
                    }
                </div>
            </div>

            <a href="@Url.Action("DonHang", "Admin")" class="btn btn-secondary btn-block">
                <i class="fas fa-arrow-left mr-2"></i> Quay lại danh sách
            </a>

        </div>
    </div>
</div>