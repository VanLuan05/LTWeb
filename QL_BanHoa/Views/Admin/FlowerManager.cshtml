﻿@model List<QL_BanHoa.SanPham>

@{
    ViewBag.Title = "Quản Lý Hoa";
    ViewBag.PageTitle = "Quản Lý Hoa";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@* --- KHU VỰC HIỆN THÔNG BÁO --- *@
@if (TempData["ThongBao"] != null)
{
    <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-4">
        <strong class="font-bold"><i class="fas fa-check-circle"></i> Thành công!</strong>
        <span class="block sm:inline">@TempData["ThongBao"]</span>
    </div>
}

@if (TempData["Loi"] != null)
{
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4">
        <strong class="font-bold"><i class="fas fa-exclamation-triangle"></i> Lỗi!</strong>
        <span class="block sm:inline">@TempData["Loi"]</span>
    </div>
}

<div class="space-y-6">
    @*<div class="flex justify-between items-center">
            <h3 class="text-xl font-semibold text-gray-800">Quản Lý Số Lượng Hoa Có Trong Kho</h3>
            <a href="@Url.Action("AddProduct", "Admin")" class="bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-2 px-4 rounded-lg shadow-md transition duration-300">
                <i class="fas fa-plus mr-2"></i> Thêm Hoa Mới
            </a>
        </div>*@
    <div class="bg-white p-4 rounded-xl shadow">

        @*Lọc theo danh mục và tìm kiếm theo tên*@
        @using (Html.BeginForm("FlowerManager", "Admin", FormMethod.Get, new { id = "formTimKiem", @class = "bg-white p-4 rounded-xl shadow mb-4" }))
        {
            <div class="grid grid-cols-1 md:grid-cols-4 gap-4">

                @* Dropdown Lọc Danh Mục *@
                <select name="maDanhMuc" onchange="document.getElementById('formTimKiem').submit();" class="p-2 border border-gray-300 rounded-lg focus:ring-indigo-500 focus:border-indigo-500">
                    <option value="">-- Tất cả danh mục --</option>
                    @if (ViewBag.DanhSachDanhMuc != null)
                    {
                        foreach (var dm in ViewBag.DanhSachDanhMuc)
                        {
                            // Kiểm tra danh mục nào đang được chọn
                            var duocChon = ViewBag.DanhMucHienTai != null && (int)ViewBag.DanhMucHienTai == dm.MADM;
                            <option value="@dm.MADM" @(duocChon ? "selected" : "")>@dm.TENDM</option>
                        }
                    }
                </select>

                @* Tìm kiếm *@
                <div class="col-span-1 md:col-span-3 flex gap-2">
                    <input type="text"
                           name="tuKhoa"
                           value="@ViewBag.TuKhoaHienTai"
                           placeholder="Tìm kiếm theo tên hoa..."
                           class="w-full p-2 border border-gray-300 rounded-lg focus:ring-indigo-500 focus:border-indigo-500">

                    <button type="submit" class="bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-2 px-4 rounded-lg shadow">
                        <i class="fas fa-search"></i>
                    </button>

                    @* Nút xóa lọc *@
                    <a href="@Url.Action("FlowerManager", "Admin")" class="bg-gray-500 hover:bg-gray-600 text-white font-bold py-2 px-4 rounded-lg shadow flex items-center">
                        <i class="fas fa-sync-alt"></i>
                    </a>

                    @* Nút xóa nhiều sản phẩm *@
                    <button type="button" onclick="kiemTraVaHienModalXoaNhieu()" class="bg-red-600 hover:bg-red-700 text-white font-bold py-2 px-4 rounded-lg shadow whitespace-nowrap">
                        <i class="fas fa-trash-alt mr-2"></i> Xóa chọn
                    </button>
                </div>
            </div>
        }
    </div>

    @* Form xóa nhiều sản phẩm *@
    @using (Html.BeginForm("DeleteMultipleProducts", "Admin", FormMethod.Post, new { id = "formXoaNhieu" }))
    {
        <div class="bg-white rounded-xl shadow overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        @* checkbox *@
                        <th class="px-6 py-3 text-center w-10">
                            <input type="checkbox" id="checkAll" class="h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded">
                        </th>

                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">ID</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Ảnh</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Tên Hoa</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Danh mục</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Giá Bán</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider whitespace-nowrap">Trạng Thái</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Thao Tác</th>
                    </tr>
                </thead>

                @*Load sản phẩm lên mục danh sách hoa*@
                <tbody class="bg-white divide-y divide-gray-200">
                    @if (Model != null && Model.Count > 0)
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                @* checkbox item *@
                                <td class="px-6 py-4 text-center">
                                    <input type="checkbox" name="ids" value="@item.MASP" class="checkItem h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded">
                                </td>

                                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                                    #@item.MASP
                                </td>

                                <td class="px-6 py-4 whitespace-nowrap">
                                    <img src="~/Content/hinhanh/@item.URL_ANH" class="h-10 w-10 object-cover rounded-md border" alt="Ảnh SP" />
                                </td>

                                <td class="px-6 py-4 text-sm font-medium text-gray-900 min-w-[150px]">
                                    @item.TENSP
                                </td>

                                <td class="px-6 py-4 text-sm text-gray-500">
                                    @if (item.DanhMuc != null)
                                    {
                                        @item.DanhMuc.TENDM
                                    }
                                    else
                                    {
                                        <span class="text-red-400">Chưa phân loại</span>
                                    }
                                </td>

                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 font-bold">
                                    @string.Format("{0:N0} đ", item.GIA)
                                </td>

                                <td class="px-6 py-4 whitespace-nowrap">
                                    @if (item.TRANGTHAI == "Còn hàng" || item.TRANGTHAI == "Hiển thị")
                                    {
                                        <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                                            @item.TRANGTHAI
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-red-100 text-red-800">
                                            @item.TRANGTHAI
                                        </span>
                                    }
                                </td>

                                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium space-x-2">
                                    <a href="@Url.Action("EditProduct", "Admin", new { id = item.MASP })" class="text-indigo-600 hover:text-indigo-900">
                                        <i class="fas fa-edit"></i> Sửa
                                    </a>
                                    <button type="button" onclick="hienThiModalXoa(@item.MASP, '@item.TENSP')" class="text-red-600 hover:text-red-900 ml-2 focus:outline-none">
                                        <i class="fas fa-trash"></i> Xóa
                                    </button>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="8" class="text-center py-4 text-gray-500">Không có dữ liệu sản phẩm.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }

    @*Hiển thị sản phẩm theo số lượng 20 trong 1 trang*@
    <div class="flex flex-col md:flex-row justify-between items-center mt-4 px-2">
        @* Hiển thị số lượng kết quả *@
        <div class="text-sm text-gray-700 mb-2 md:mb-0">
            @if (ViewBag.TongSoBanGhi > 0)
            {
                int trg = ViewBag.TrangHienTai;
                int kt = ViewBag.KichThuocTrang;
                int tong = ViewBag.TongSoBanGhi;

                int tu = (trg - 1) * kt + 1;
                int den = Math.Min(trg * kt, tong);

                <span>Hiển thị <b>@tu</b> đến <b>@den</b> trong <b>@tong</b> kết quả</span>
            }
            else
            {
                <span>Không tìm thấy dữ liệu phù hợp</span>
            }
        </div>

        @* Các nút điều hướng *@
        @if (ViewBag.TongSoTrang > 1)
        {
            <nav class="relative z-0 inline-flex rounded-md shadow-sm -space-x-px" aria-label="Pagination">

                @* Nút quay lại *@
                @if (ViewBag.TrangHienTai > 1)
                {
                    <a href="@Url.Action("FlowerManager", new { trang = ViewBag.TrangHienTai - 1, tuKhoa = ViewBag.TuKhoaHienTai, maDanhMuc = ViewBag.DanhMucHienTai })"
                       class="relative inline-flex items-center px-2 py-2 rounded-l-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50">
                        <i class="fas fa-chevron-left"></i>
                    </a>
                }
                else
                {
                    <span class="relative inline-flex items-center px-2 py-2 rounded-l-md border border-gray-300 bg-gray-100 text-gray-400 cursor-not-allowed">
                        <i class="fas fa-chevron-left"></i>
                    </span>
                }

                @* Hiển thị trang hiện tại *@
                <span class="relative inline-flex items-center px-4 py-2 border border-gray-300 bg-white text-sm font-medium text-gray-700">
                    Trang @ViewBag.TrangHienTai / @ViewBag.TongSoTrang
                </span>

                @* Nút tiếp theo *@
                @if (ViewBag.TrangHienTai < ViewBag.TongSoTrang)
                {
                    <a href="@Url.Action("FlowerManager", new { trang = ViewBag.TrangHienTai + 1, tuKhoa = ViewBag.TuKhoaHienTai, maDanhMuc = ViewBag.DanhMucHienTai })"
                       class="relative inline-flex items-center px-2 py-2 rounded-r-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50">
                        <i class="fas fa-chevron-right"></i>
                    </a>
                }
                else
                {
                    <span class="relative inline-flex items-center px-2 py-2 rounded-r-md border border-gray-300 bg-gray-100 text-gray-400 cursor-not-allowed">
                        <i class="fas fa-chevron-right"></i>
                    </span>
                }
            </nav>
        }
    </div>
</div>

@* --- MODAL XÁC NHẬN XÓA (Mặc định ẩn) --- *@
<div id="modalXoa" class="fixed z-10 inset-0 overflow-y-auto hidden" aria-labelledby="modal-title" role="dialog" aria-modal="true">
    <div class="flex items-end justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0">

        @* Nền tối phía sau *@
        <div class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity" aria-hidden="true"></div>

        <span class="hidden sm:inline-block sm:align-middle sm:h-screen" aria-hidden="true">&#8203;</span>

        @* Hộp thoại chính *@
        <div class="inline-block align-bottom bg-white rounded-lg text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-lg sm:w-full">

            @* Form gửi yêu cầu xóa *@
            @using (Html.BeginForm("DeleteProduct", "Admin", FormMethod.Post))
            {
                <div class="bg-white px-4 pt-5 pb-4 sm:p-6 sm:pb-4">
                    <div class="sm:flex sm:items-start">
                        <div class="mx-auto flex-shrink-0 flex items-center justify-center h-12 w-12 rounded-full bg-red-100 sm:mx-0 sm:h-10 sm:w-10">
                            <i class="fas fa-exclamation-triangle text-red-600"></i>
                        </div>
                        <div class="mt-3 text-center sm:mt-0 sm:ml-4 sm:text-left">
                            <h3 class="text-lg leading-6 font-medium text-gray-900" id="modal-title">
                                Xóa Sản Phẩm
                            </h3>
                            <div class="mt-2">
                                <p class="text-sm text-gray-500">
                                    Bạn có chắc chắn muốn xóa sản phẩm <b id="tenSanPhamCanXoa" class="text-red-600"></b> không?
                                    <br>Hành động này không thể hoàn tác.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>

                @* Input ẩn chứa ID sản phẩm *@
                <input type="hidden" name="id" id="idSanPhamCanXoa" value="" />

                <div class="bg-gray-50 px-4 py-3 sm:px-6 sm:flex sm:flex-row-reverse">
                    <button type="submit" class="w-full inline-flex justify-center rounded-md border border-transparent shadow-sm px-4 py-2 bg-red-600 text-base font-medium text-white hover:bg-red-700 focus:outline-none sm:ml-3 sm:w-auto sm:text-sm">
                        Xóa
                    </button>
                    <button type="button" onclick="dongModalXoa()" class="mt-3 w-full inline-flex justify-center rounded-md border border-gray-300 shadow-sm px-4 py-2 bg-white text-base font-medium text-gray-700 hover:bg-gray-50 focus:outline-none sm:mt-0 sm:ml-3 sm:w-auto sm:text-sm">
                        Hủy bỏ
                    </button>
                </div>
            }
        </div>
    </div>
</div>

@* --- MODAL XÓA NHIỀU --- *@
<div id="modalXoaNhieu" class="fixed z-10 inset-0 overflow-y-auto hidden" role="dialog" aria-modal="true">
    <div class="flex items-end justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0">
        <div class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity"></div>
        <span class="hidden sm:inline-block sm:align-middle sm:h-screen">&#8203;</span>
        <div class="inline-block align-bottom bg-white rounded-lg text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-lg sm:w-full">
            <div class="bg-white px-4 pt-5 pb-4 sm:p-6 sm:pb-4">
                <div class="sm:flex sm:items-start">
                    <div class="mx-auto flex-shrink-0 flex items-center justify-center h-12 w-12 rounded-full bg-red-100 sm:mx-0 sm:h-10 sm:w-10"><i class="fas fa-trash-alt text-red-600"></i></div>
                    <div class="mt-3 text-center sm:mt-0 sm:ml-4 sm:text-left">
                        <h3 class="text-lg leading-6 font-medium text-gray-900">Xác Nhận Xóa Nhiều</h3>
                        <div class="mt-2"><p class="text-sm text-gray-500">Bạn đang chọn xóa <b id="soLuongCanXoa" class="text-red-600">0</b> sản phẩm.<br>Hành động này không thể hoàn tác. Bạn có chắc chắn không?</p></div>
                    </div>
                </div>
            </div>
            <div class="bg-gray-50 px-4 py-3 sm:px-6 sm:flex sm:flex-row-reverse">
                <button type="button" onclick="thucHienXoaNhieu()" class="w-full inline-flex justify-center rounded-md border border-transparent shadow-sm px-4 py-2 bg-red-600 text-base font-medium text-white hover:bg-red-700 focus:outline-none sm:ml-3 sm:w-auto sm:text-sm">Đồng ý Xóa</button>
                <button type="button" onclick="dongModalXoaNhieu()" class="mt-3 w-full inline-flex justify-center rounded-md border border-gray-300 shadow-sm px-4 py-2 bg-white text-base font-medium text-gray-700 hover:bg-gray-50 focus:outline-none sm:mt-0 sm:ml-3 sm:w-auto sm:text-sm">Hủy bỏ</button>
            </div>
        </div>
    </div>
</div>

@* --- SCRIPT XỬ LÝ MODAL --- *@
<script>
    // Hàm mở modal và gán dữ liệu
    function hienThiModalXoa(id, ten) {
        // Gán ID vào input ẩn
        document.getElementById('idSanPhamCanXoa').value = id;
        // Gán tên vào thông báo
        document.getElementById('tenSanPhamCanXoa').innerText = ten;
        // Hiển thị modal (bỏ class hidden)
        document.getElementById('modalXoa').classList.remove('hidden');
    }

    // Hàm đóng modal
    function dongModalXoa() {
        document.getElementById('modalXoa').classList.add('hidden');
    }

    // --- SCRIPT XÓA NHIỀU  ---

    // 1. Xử lý Checkbox "Chọn tất cả"
    document.getElementById('checkAll').addEventListener('change', function () {
        var checkboxes = document.querySelectorAll('.checkItem');
        for (var checkbox of checkboxes) {
            checkbox.checked = this.checked;
        }
    });

    // 2. Xử lý Modal Xóa Nhiều
    function kiemTraVaHienModalXoaNhieu() {
        // Đếm số lượng checkbox đang được chọn
        var checkboxes = document.querySelectorAll('.checkItem:checked');
        if (checkboxes.length === 0) {
            alert('Vui lòng chọn ít nhất một sản phẩm để xóa!');
            return;
        }

        // Cập nhật số lượng lên modal
        document.getElementById('soLuongCanXoa').innerText = checkboxes.length;
        // Hiện modal
        document.getElementById('modalXoaNhieu').classList.remove('hidden');
    }

    function dongModalXoaNhieu() {
        document.getElementById('modalXoaNhieu').classList.add('hidden');
    }

    function thucHienXoaNhieu() {
        // Submit cái form bao quanh bảng
        document.getElementById('formXoaNhieu').submit();
    }
</script>