@using QL_BanHoa.Models
@model List<GioHang>

@{
    ViewBag.Title = "Giỏ hàng của bạn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    :root {
        --primary-color: #036b03;
        --light-bg: #f8f9fa;
    }

    .cart-header {
        border-bottom: 2px solid var(--primary-color);
        margin-bottom: 20px;
        padding-bottom: 10px;
    }

    .cart-title {
        color: var(--primary-color);
        font-weight: bold;
        margin: 0;
    }

    /* Bảng sản phẩm */
    .table-cart thead th {
        background: var(--light-bg);
        border-top: none;
        font-weight: 600;
        color: #555;
        text-transform: uppercase;
        font-size: 0.9rem;
        padding: 15px;
    }

    .table-cart tbody td {
        vertical-align: middle;
        padding: 15px;
    }

    .img-cart {
        width: 80px;
        height: 80px;
        object-fit: cover;
        border-radius: 8px;
        border: 1px solid #ddd;
    }

    .name-product {
        font-weight: 600;
        color: #333;
        text-decoration: none;
        display: block;
    }

        .name-product:hover {
            color: var(--primary-color);
        }

    /* Bộ chọn số lượng */
    .qty-group {
        display: inline-flex;
        border: 1px solid #ddd;
        border-radius: 20px;
        overflow: hidden;
    }

    .btn-qty {
        border: none;
        background: white;
        width: 30px;
        height: 30px;
        font-weight: bold;
        color: #555;
        transition: 0.2s;
    }

        .btn-qty:hover {
            background: #eee;
            color: var(--primary-color);
        }

    .input-qty {
        width: 40px;
        border: none;
        text-align: center;
        font-weight: bold;
        outline: none;
    }

    /* Box tổng tiền */
    .summary-box {
        background: white;
        border: 1px solid #eee;
        border-radius: 10px;
        padding: 20px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.05);
        position: sticky;
        top: 20px;
    }

    .btn-checkout {
        background: var(--primary-color);
        color: white;
        border-radius: 50px;
        padding: 12px;
        font-weight: bold;
        width: 100%;
        display: block;
        text-align: center;
        text-decoration: none;
        transition: 0.3s;
    }

        .btn-checkout:hover {
            background: #025202;
            color: white;
            transform: translateY(-2px);
        }
</style>

<div class="container my-5">
    <div class="d-flex align-items-center justify-content-between cart-header">
        <h3 class="cart-title"><i class="fas fa-shopping-cart me-2"></i>GIỎ HÀNG CỦA BẠN</h3>
        <span class="text-muted">(@(Model != null ? Model.Count : 0) sản phẩm)</span>
    </div>

    @if (Model == null || Model.Count == 0)
    {
        /* GIAO DIỆN KHI GIỎ HÀNG TRỐNG */
        <div class="text-center py-5 bg-light rounded">
            <img src="https://cdn-icons-png.flaticon.com/512/11329/11329060.png" width="120" class="mb-3 opacity-75">
            <h5 class="text-muted">Giỏ hàng của bạn đang trống!</h5>
            <p class="mb-4">Hãy thêm những bó hoa tươi thắm vào giỏ nhé.</p>
            <a href="@Url.Action("Index", "SanPham")" class="btn btn-outline-info rounded-pill px-4">
                <i class="fas fa-arrow-left me-2"></i>Tiếp tục mua sắm
            </a>
        </div>
    }
    else
    {
        /* GIAO DIỆN KHI CÓ SẢN PHẨM */
        <div class="row g-4">
            <div class="col-lg-8">
                <div class="table-responsive">
                    <table class="table table-cart">
                        <thead>
                            <tr>
                                <th width="45%">Sản phẩm</th>
                                <th width="15%" class="text-center">Đơn giá</th>
                                <th width="20%" class="text-center">Số lượng</th>
                                <th width="15%" class="text-end">Thành tiền</th>
                                <th width="5%"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <a href="@Url.Action("ChiTiet", "SanPham", new { id = item.MASP })">
                                                <img src="~/Content/hinhanh/@item.Anh" class="img-cart me-3" alt="@item.TenSP" onerror="this.src='https://via.placeholder.com/80'">
                                            </a>
                                            <div>
                                                <a href="@Url.Action("ChiTiet", "SanPham", new { id = item.MASP })" class="name-product">@item.TenSP</a>
                                                <small class="text-muted">Mã: #@item.MASP</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="text-center text-muted">@string.Format("{0:#,###}", item.Gia)₫</td>
                                    <td class="text-center">
                                        @using (Html.BeginForm("CapNhatGioHang", "GioHang", FormMethod.Post))
                                        {
                                            <div class="qty-group">
                                                <button type="submit" name="action" value="minus" class="btn-qty">-</button>
                                                <input type="text" name="SoLuong" value="@item.SOLUONG" class="input-qty" readonly>
                                                <button type="submit" name="action" value="plus" class="btn-qty">+</button>
                                                <input type="hidden" name="MaSP" value="@item.MASP">
                                            </div>
                                        }
                                    </td>
                                    <td class="text-end fw-bold text-success">@string.Format("{0:#,###}", item.THANHTIEN)₫</td>
                                    <td class="text-end">
                                        @using (Html.BeginForm("XoaGioHang", "GioHang", FormMethod.Post))
                                        {
                                            <input type="hidden" name="MaSP" value="@item.MASP">
                                            <button type="submit" class="btn btn-sm text-danger border-0 bg-transparent" title="Xóa" onclick="return confirm('Bạn có chắc muốn xóa không?')">
                                                <i class="fas fa-trash-alt"></i>
                                            </button>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="summary-box">
                    <h5 class="fw-bold mb-4">Tóm tắt đơn hàng</h5>
                    <div class="d-flex justify-content-between mb-2">
                        <span class="text-muted">Tạm tính:</span>
                        <span class="fw-bold">@string.Format("{0:#,###}", ViewBag.TongTT)₫</span>
                    </div>
                    <div class="d-flex justify-content-between mb-3">
                        <span class="text-muted">Phí vận chuyển:</span>
                        <span class="text-success">Miễn phí</span>
                    </div>
                    <hr>
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <span class="h5 mb-0 fw-bold">Tổng cộng:</span>
                        <span class="h4 mb-0 text-danger fw-bold">@string.Format("{0:#,###}", ViewBag.TongTT)₫</span>
                    </div>

                    <a href="@Url.Action("Index", "ThanhToan")" class="btn-checkout">
                        TIẾN HÀNH ĐẶT HÀNG <i class="fas fa-arrow-right ms-2"></i>
                    </a>
                </div>
            </div>
        </div>
    }
</div>