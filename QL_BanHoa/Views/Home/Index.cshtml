        <div id="carouselExampleControls" class="carousel carousel-dark slide" data-bs-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <div class="product-box2mh">
                        @foreach (var item in Model.BoHoaReHomNay.Take(6))
                        {
                            <div class="box2mh">
                                <a href="@Url.Action("ChiTiet", "Home", new { id = item.MASP })" style="text-decoration:none">
                                    <div class="covermh-img">
                                        <img src="~/Content/hinhanh/@item.URL_ANH" alt="@item.TENSP" />
                                        @if (item.KHUYENMAI != null)
                                        {
                                            <span class="tagmh">-@item.KHUYENMAI.PHANTRAMGIAM%</span>
                                        }
                                        <span class="tagmh1"><b>NEW</b></span>
                                    </div>
                                    <div class="cover-tensp">
                                        <div class="tensp">@item.TENSP</div>
                                        <div style="color:black">
                                            @{
                                                decimal? giaGoc = item.GIA;
                                                if (item.KHUYENMAI != null && item.KHUYENMAI.PHANTRAMGIAM > 0)
                                                {
                                                    giaGoc = item.GIA / (1 - (item.KHUYENMAI.PHANTRAMGIAM / 100m));
                                                }
                                            }
                                            @if (item.KHUYENMAI != null && giaGoc.HasValue)
                                            {
                                                <span class="textmhgach">@giaGoc.Value.ToString("N0")đ</span>
                                            }
                                            <br /><span class="h5 text-danger mb-0">@String.Format("{0:N0}₫", item.GIA)</span>
                                        </div>
                                        <div class="mt-2">
                                            <a href="@Url.Action("ThemGioHang", "GioHang", new { MaSP = item.MASP, url = Request.Url.ToString() })" class="btn btn-sm btn-success" style="width:100%">
                                                <i class="fa fa-shopping-cart"></i> Thêm vào giỏ
                                            </a>
                                        </div>
                                    </div>
                                </a>
                            </div>
                        }
                    </div>
                </div>

                <div class="carousel-item">
                    <div class="product-box2mh">
                        @foreach (var item in Model.BoHoaReHomNay.Skip(6).Take(6))
                        {
                            <div class="box2mh">
                                <a href="@Url.Action("ChiTiet", "Home", new { id = item.MASP })" style="text-decoration:none">
                                    <div class="covermh-img">
                                        <img src="~/Content/hinhanh/@item.URL_ANH" alt="@item.TENSP" />
                                        @if (item.KHUYENMAI != null)
                                        {
                                            <span class="tagmh">-@item.KHUYENMAI.PHANTRAMGIAM%</span>
                                        }
                                        <span class="tagmh1"><b>NEW</b></span>
                                    </div>
                                    <div class="cover-tensp">
                                        <div class="tensp">@item.TENSP</div>
                                        <div style="color:black">
                                            <span class="textmhgach">@((item.GIA * 1.2m)?.ToString("N0"))đ</span>
                                            <br /><span class="h5 text-danger mb-0">@String.Format("{0:N0}₫", item.GIA)</span>
                                        </div>
                                        <div class="mt-2">
                                            <a href="@Url.Action("ThemGioHang", "GioHang", new { MaSP = item.MASP, url = Request.Url.ToString() })" class="btn btn-sm btn-success" style="width:100%">
                                                <i class="fa fa-shopping-cart"></i> Thêm vào giỏ
                                            </a>
                                        </div>
                                    </div>
                                </a>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <button class="carousel-control-prev" type="button" data-bs-target="#carouselBoHoaRe" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselBoHoaRe" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>

        <a class="btn xemthem" href="@Url.Action("DanhMuc", "SanPham", new { phanLoai = "BoHoaRe" })" role="button">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="25" fill="currentColor" class="bi bi-list" viewBox="0 0 16 16" style="margin-bottom:3px;">
