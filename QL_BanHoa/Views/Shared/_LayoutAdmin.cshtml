<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Hoa Store</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <style>
        .sidebar-link {
            transition: all 0.3s ease;
        }

            .sidebar-link:hover {
                background-color: rgba(99, 102, 241, 0.1);
                border-left: 4px solid #6366f1;
            }
            /* Bạn có thể dùng logic C# để check class active sau này */
            .sidebar-link.active {
                background-color: rgba(99, 102, 241, 0.15);
                border-left: 4px solid #6366f1;
                color: #6366f1;
            }

        .sidebar {
            box-shadow: 2px 0 10px rgba(0,0,0,0.1);
        }
    </style>
</head>
<script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>
<body class="bg-gray-100">
    <div class="flex h-screen overflow-hidden">
        <aside class="sidebar w-64 bg-gray-900 text-white flex-shrink-0 hidden lg:block">
            <div class="p-6">
                <div class="flex items-center space-x-3 mb-8">
                    <div class="w-10 h-10 bg-indigo-600 rounded-lg flex items-center justify-center">
                        <i class="fas fa-store text-xl"></i>
                    </div>
                    <div>
                        <h1 class="font-bold text-lg">Fashion Store</h1>
                        <p class="text-xs text-gray-400">Admin Panel</p>
                    </div>
                </div>

                <div class="bg-gray-800 rounded-lg p-4 mb-6">
                    <div class="flex items-center space-x-3">
                        <div class="w-10 h-10 bg-indigo-500 rounded-full flex items-center justify-center">
                            <i class="fas fa-user"></i>
                        </div>
                        <div class="flex-1 min-w-0">
                            <p class="font-semibold text-sm truncate">admin@fashionstore.com</p>
                            <p class="text-xs text-gray-400 capitalize">Administrator</p>
                        </div>
                    </div>
                </div>

                <nav class="space-y-1">
                    @{
                        // >>> PHẦN ĐỊNH NGHĨA BIẾN CẦN THIẾT <<<
                        // Lấy tên Controller và Action hiện tại
                        string currentController = ViewContext.RouteData.Values["controller"].ToString();
                        string currentAction = ViewContext.RouteData.Values["action"].ToString();

                        // Hàm kiểm tra và trả về class 'active'
                        Func<string, string, string> GetActiveClass = (action, controller) =>
                            currentController.Equals(controller, StringComparison.OrdinalIgnoreCase) &&
                            currentAction.Equals(action, StringComparison.OrdinalIgnoreCase) ? "active" : "";
                    }
                    <div x-data="{ open: (@(currentController == "Flower" || currentController == "Admin" && (currentAction.Contains("Flower") || currentAction == "AddProduct")).ToString().ToLower()) }">
                        <button type="button" @@click="open = ! open" class="sidebar-link w-full flex items-center justify-between px-4 py-3 rounded-lg text-sm transition duration-150 ease-in-out">
                            <div class="flex items-center space-x-3">
                                <a href="@Url.Action("FlowerManager", "Admin")">
                                    <i class="fas fa-seedling w-5"></i>
                                    <span>Quản lý</span>
                                </a>
                            </div>
                            <i class="fas" class="{ 'fa-chevron-down': open, 'fa-chevron-right': !open }"></i>
                        </button>

                        <div x-show="open" x-collapse>
                            <a href="@Url.Action("FlowerManager", "Admin")" class="sidebar-link block pl-12 pr-4 py-2 text-xs text-gray-300">
                                <i class="fas fa-list-alt mr-2"></i> Quản lý hoa
                            </a>
                            <a href="@Url.Action("AddProduct", "Admin")" class="sidebar-link block pl-12 pr-4 py-2 text-xs text-gray-300">
                                <i class="fas fa-plus-circle mr-2"></i> Thêm hoa mới
                            </a>
                            <a href="@Url.Action("CategoryManager", "Admin")" class="sidebar-link block pl-12 pr-4 py-2 text-xs text-gray-300">
                                <i class="fas fa-tags mr-2"></i> Quản lý danh mục
                            </a>
                            <a href="@Url.Action("AddCategory", "Admin")" class="sidebar-link block pl-12 pr-4 py-2 text-xs text-gray-300">
                                <i class="fas fa-plus-circle mr-2"></i> Thêm danh mục mới
                            </a>
                        </div>
                    </div>
                    <a href="@Url.Action("Index", "Admin")" class="sidebar-link @GetActiveClass("MoneyMoney", "Admin") flex items-center space-x-3 px-4 py-3 rounded-lg text-sm">
                        <i class="fas fa-chart-line w-5"></i>
                        <span>Thống kê</span>
                    </a>
                    <a href="@Url.Action("DonHang", "Admin")" class="sidebar-link @GetActiveClass("DonHang", "Admin") flex items-center space-x-3 px-4 py-3 rounded-lg text-sm">
                        <i class="fas fa-shopping-cart w-5"></i>
                        <span>Đơn hàng</span>
                    </a>

                    <a href="@Url.Action("TaiKhoan", "Admin")" class="sidebar-link @GetActiveClass("TaiKhoan", "Admin") flex items-center space-x-3 px-4 py-3 rounded-lg text-sm">
                        <i class="fas fa-users w-5"></i>
                        <span>Tài khoản</span>
                    </a>
                    <a href="@Url.Action("QLLienHe", "Admin")" class="sidebar-link @GetActiveClass("QLLienHe", "Admin") flex items-center space-x-3 px-4 py-3 rounded-lg text-sm">
                        <i class="fas fa-fw fa-envelope"></i>
                        <span>Khách hàng liên hệ</span>
                    </a>

                    <div class="border-t border-gray-700 my-4"></div>
                    <a href="@Url.Action("Index", "Home")" class="sidebar-link flex items-center space-x-3 px-4 py-3 rounded-lg text-sm">
                        <i class="fas fa-home w-5"></i>
                        <span>Trang chủ</span>
                    </a>
                    <a href="@Url.Action("Logout", "Admin")" class="sidebar-link flex items-center space-x-3 px-4 py-3 rounded-lg text-sm text-red-400">
                        <i class="fas fa-sign-out-alt w-5"></i>
                        <span>Đăng xuất</span>
                    </a>
                </nav>
            </div>
        </aside>

        <div class="flex-1 flex flex-col overflow-hidden">
            <header class="bg-white shadow-sm z-10">
                <div class="px-6 py-4 flex items-center justify-between">
                    <div class="flex items-center space-x-4">
                        <button class="lg:hidden text-gray-600">
                            <i class="fas fa-bars text-xl"></i>
                        </button>
                        <h2 class="text-2xl font-bold text-gray-800">
                            @if (ViewBag.PageTitle != null)
                            {
                                @ViewBag.PageTitle
                            }
                            else
                            {
                                <text>Thống kê</text>
                            }
                        </h2>
                    </div>
                    <div class="flex items-center space-x-4">
                        <div class="relative">
                            <input type="text" placeholder="Tìm kiếm..." class="pl-10 pr-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500">
                            <i class="fas fa-search absolute left-3 top-3 text-gray-400"></i>
                        </div>

                        <div class="relative" id="notification-container">
                            <button id="btn-bell" class="relative text-gray-600 hover:text-gray-800 focus:outline-none mt-1">
                                <i class="fas fa-bell text-2xl"></i> <span id="notif-count" class="absolute -top-1 -right-1 w-5 h-5 bg-red-500 rounded-full text-xs text-white flex items-center justify-center hidden animate-pulse">
                                    0
                                </span>
                            </button>

                            <div id="notif-dropdown" class="absolute right-0 mt-2 w-80 bg-white rounded-xl shadow-2xl overflow-hidden z-50 hidden border border-gray-100 transform origin-top-right transition-all duration-200">
                                <div class="bg-gray-50 px-4 py-3 border-b border-gray-200 flex justify-between items-center">
                                    <h3 class="text-sm font-bold text-gray-700">Thông báo</h3>

                                    <span id="btn-mark-read" class="text-xs text-indigo-600 hover:underline cursor-pointer select-none">
                                        Đánh dấu đã đọc
                                    </span>
                                </div>

                                <div id="notif-list" class="max-h-80 overflow-y-auto">
                                    <div class="p-4 text-center text-gray-400 text-sm">
                                        <i class="fas fa-spinner fa-spin mr-2"></i> Đang tải...
                                    </div>
                                </div>

                                <div class="bg-gray-50 border-t border-gray-200">
                                    <a href="@Url.Action("DonHang", "Admin")" class="block w-full text-center py-2 text-sm text-indigo-600 font-semibold hover:bg-gray-100 transition">
                                        Xem tất cả đơn hàng
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </header>

            <main class="flex-1 overflow-y-auto bg-gray-100 p-6">
                @RenderBody()
            </main>
        </div>
    </div>

    @RenderSection("scripts", required: false)
<script type="text/javascript">
    $(document).ready(function () {

        // 1. XỬ LÝ ẨN/HIỆN MENU
        $('#btn-bell').click(function(e) {
            e.stopPropagation();
            $('#notif-dropdown').toggleClass('hidden');
        });

        $(document).click(function() {
            if (!$('#notif-dropdown').hasClass('hidden')) {
                $('#notif-dropdown').addClass('hidden');
            }
        });

        $('#notif-dropdown').click(function(e) {
            e.stopPropagation();
        });

        // --- 2. XỬ LÝ NÚT "ĐÁNH DẤU ĐÃ ĐỌC" (MỚI THÊM) ---
        $('#btn-mark-read').click(function() {
            var btn = $(this);
            var originalText = btn.text();

            // Hiệu ứng đang xử lý
            btn.text('Đang xử lý...');
            btn.addClass('text-gray-400').removeClass('text-indigo-600 cursor-pointer');

            $.ajax({
                url: '@Url.Action("MarkAllRead", "Admin")',
                type: 'POST',
                success: function(res) {
                    if(res.success) {
                        // Load lại danh sách thông báo ngay lập tức
                        updateNotifications();

                        // Trả lại trạng thái nút
                        setTimeout(function(){
                            btn.text('Đã xong');
                        }, 500);

                        // Reset text sau 2 giây
                        setTimeout(function(){
                            btn.text(originalText);
                            btn.removeClass('text-gray-400').addClass('text-indigo-600 cursor-pointer');
                        }, 2000);
                    }
                },
                error: function() {
                    alert('Có lỗi xảy ra khi cập nhật.');
                    btn.text(originalText);
                }
            });
        });

        // 3. TỰ ĐỘNG CẬP NHẬT THÔNG BÁO
        updateNotifications();
        setInterval(function () {
            updateNotifications();
        }, 5000);
    });

    function updateNotifications() {
        $.ajax({
            url: '@Url.Action("GetNotifications", "Admin")',
            type: 'GET',
            dataType: 'json',
            cache: false,
            success: function (response) {
                // A. Cập nhật Badge số lượng
                var badge = $('#notif-count');
                if (response.Count > 0) {
                    badge.text(response.Count);
                    badge.removeClass('hidden');
                } else {
                    badge.addClass('hidden');
                }

                // B. Vẽ danh sách
                var htmlContent = '';
                if (response.List && response.List.length > 0) {
                    $.each(response.List, function (index, item) {
                        var iconInfo = getIconStyle(item.Loai);
                        htmlContent += `
                            <a href="${item.LinkLienKet}" class="block px-4 py-3 hover:bg-gray-50 border-b border-gray-100 transition duration-150">
                                <div class="flex items-start">
                                    <div class="flex-shrink-0">
                                        <span class="inline-flex items-center justify-center h-10 w-10 rounded-full ${iconInfo.bg}">
                                            <i class="fas ${iconInfo.icon} text-white"></i>
                                        </span>
                                    </div>
                                    <div class="ml-3 w-0 flex-1">
                                        <p class="text-sm font-medium text-gray-900 truncate">${item.TieuDe}</p>
                                        <p class="text-xs text-gray-500 mt-1 line-clamp-2">${item.NoiDung}</p>
                                        <p class="text-xs text-indigo-500 mt-1 font-semibold">${item.ThoiGian}</p>
                                    </div>
                                </div>
                            </a>`;
                    });
                } else {
                    htmlContent = `
                        <div class="p-6 text-center text-gray-400">
                            <i class="far fa-bell-slash text-3xl mb-2"></i>
                            <p class="text-sm">Không có thông báo mới</p>
                        </div>`;
                }
                $('#notif-list').html(htmlContent);
            }
        });
    }

    function getIconStyle(loai) {
        if (loai === "order-new") return { icon: "fa-file-invoice-dollar", bg: "bg-green-500" };
        if (loai === "order-cancel") return { icon: "fa-times-circle", bg: "bg-red-500" };
        if (loai === "contact") return { icon: "fa-envelope", bg: "bg-yellow-500" };
        if (loai === "user") return { icon: "fa-user-plus", bg: "bg-blue-500" };
        return { icon: "fa-info", bg: "bg-gray-400" };
    }
</script>
</body>
</html>